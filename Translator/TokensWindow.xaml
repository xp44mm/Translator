<Window x:Class="Translator.TokensWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="断开短语"
        Height="118" Width="372"
        FontSize="18"

        ShowInTaskbar="False"
        WindowStartupLocation="CenterOwner"
        Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <!--起始单词-->
        <ListBox Style="{StaticResource WrapListBoxStyle}" ItemsSource="{Binding}" x:Name="lstTokens">
            <ListBox.ItemTemplate>
                <DataTemplate>
                    <ToggleButton MinWidth="4" Content="{Binding Path=Lexeme}" IsChecked="{Binding Path=IsStarted}"></ToggleButton>
                </DataTemplate>
            </ListBox.ItemTemplate>
            <ListBox.ItemContainerStyle>
                <Style TargetType="{x:Type ListBoxItem}">
                    <Setter Property="Margin" Value="1,2"/>
                </Style>
            </ListBox.ItemContainerStyle>
        </ListBox>
        <WrapPanel Grid.Row="1">
            <ToggleButton IsChecked="False" Click ="SpaceSwhich_Click" x:Name="btnShowSpace">显示空格</ToggleButton>
            <Button Click="Button_Click">确定</Button>
        </WrapPanel>
    </Grid>
</Window>
