<Application
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:sys="clr-namespace:System;assembly=mscorlib"
    ShutdownMode="OnMainWindowClose">

    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Controls.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Fonts.xaml" />
                <ResourceDictionary Source="pack://application:,,,/MahApps.Metro;component/Styles/Themes/Dark.Blue.xaml" />
            </ResourceDictionary.MergedDictionaries>

            <FontFamily x:Key="AppFontFamily">STXihei</FontFamily>
            <sys:Double x:Key="AppFontSize">16</sys:Double>
            <sys:Double x:Key="AppHeaderFontSize">18</sys:Double>

            <Style BasedOn="{StaticResource {x:Type TextBlock}}" TargetType="TextBlock">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="FontSize" Value="{StaticResource AppFontSize}" />
                <Setter Property="Foreground" Value="{DynamicResource TextBrush}" />
            </Style>

            <Style
                x:Key="WindowTitleStyle"
                BasedOn="{StaticResource {x:Type TextBlock}}"
                TargetType="TextBlock">
                <Setter Property="FontSize" Value="{StaticResource AppHeaderFontSize}" />
                <Setter Property="FontWeight" Value="Bold" />
            </Style>

            <Style BasedOn="{StaticResource {x:Type TextBox}}" TargetType="TextBox">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="FontSize" Value="{StaticResource AppFontSize}" />
            </Style>

            <Style BasedOn="{StaticResource {x:Type ComboBox}}" TargetType="ComboBox">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="FontSize" Value="{StaticResource AppFontSize}" />
            </Style>

            <Style BasedOn="{StaticResource {x:Type Button}}" TargetType="Button">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="FontSize" Value="{StaticResource AppFontSize}" />
            </Style>

            <!--  Label  -->
            <Style BasedOn="{StaticResource {x:Type Label}}" TargetType="Label">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="FontSize" Value="{StaticResource AppFontSize}" />
            </Style>

            <!--  CheckBox  -->
            <Style BasedOn="{StaticResource {x:Type CheckBox}}" TargetType="CheckBox">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="FontSize" Value="{StaticResource AppFontSize}" />
            </Style>

            <!--  RadioButton  -->
            <Style BasedOn="{StaticResource {x:Type RadioButton}}" TargetType="RadioButton">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="FontSize" Value="{StaticResource AppFontSize}" />
            </Style>

            <!--  MenuItem  -->
            <Style BasedOn="{StaticResource {x:Type MenuItem}}" TargetType="MenuItem">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="FontSize" Value="{StaticResource AppFontSize}" />
            </Style>

            <!--  TabItem  -->
            <Style BasedOn="{StaticResource {x:Type TabItem}}" TargetType="TabItem">
                <Setter Property="FontFamily" Value="{StaticResource AppFontFamily}" />
                <Setter Property="FontSize" Value="{StaticResource AppFontSize}" />
            </Style>

        </ResourceDictionary>
    </Application.Resources>
</Application>

